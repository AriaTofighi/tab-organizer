{
  "manifest_version": 3,
  "name": "Tab Organizer (Gemini)",
  "version": "1.0",
  "description": "Group your Chrome tabs using Gemini 2.0 Flash",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "notifications",
    "commands"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/layer.png",
      "48": "icons/layer.png",
      "128": "icons/layer.png"
    }
  },
  "commands": {
    "organize-tabs": {
      "suggested_key": {
        "default": "Alt+O"
      },
      "description": "Organize tabs using current settings"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/layer.png",
    "48": "icons/layer.png",
    "128": "icons/layer.png"
  }
}